---
import '../styles/colors.css';

interface Props {
	title?: string;
}

const { title = 'Aeternum' } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title === 'Aeternum' ? title : `${title} | Aeternum`}</title>

		<!-- Google Fonts: Zen Old Mincho -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Zen+Old+Mincho:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="global-header">
			<div class="header-inner">
				<a href="/" class="brand-logo zen-mincho">Aeternum</a>
				
				<button class="menu-toggle" aria-label="Menu">
					<span class="bar"></span>
					<span class="bar"></span>
				</button>
			</div>

			<nav class="full-menu">
				<ul class="nav-links zen-mincho">
					<li><a href="/catalog" data-desc="Sensory EC">蒐集庵</a></li>
					<li><a href="/nexus" data-desc="B2B Strategy">NEXUS</a></li>
					<li><a href="/journal" data-desc="Insight">Journal</a></li>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="global-footer">
			<p class="zen-mincho">© 2026 Aeternum – 意味・構造・表現の循環</p>
		</footer>

		<script>
			const menuToggle = document.querySelector('.menu-toggle');
			const fullMenu = document.querySelector('.full-menu');
			const body = document.body;

			menuToggle?.addEventListener('click', () => {
				menuToggle.classList.toggle('active');
				fullMenu?.classList.toggle('active');
				body.classList.toggle('menu-open');
			});
		</script>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		background-color: var(--bg-primary);
		color: var(--text-primary);
		font-family: 'Zen Old Mincho', serif;
		-webkit-font-smoothing: antialiased;
		transition: background-color 0.5s ease;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	main {
		flex: 1;
	}

	.global-header {
		padding: 2rem;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 1000;
		box-sizing: border-box;
		background: transparent;
	}

	.header-inner {
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.brand-logo {
		font-size: 1.5rem;
		text-decoration: none;
		color: var(--text-primary);
		letter-spacing: 0.2rem;
		font-weight: 700;
		position: relative;
		z-index: 1001;
	}

	.menu-toggle {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 1001;
		display: flex;
		flex-direction: column;
		gap: 6px;
	}

	.bar {
		display: block;
		width: 24px;
		height: 1px;
		background: var(--text-muted);
		transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
	}

	.menu-toggle.active .bar {
		background: #ffffff;
	}

	.menu-toggle.active .bar:nth-child(1) {
		transform: translateY(3.5px) rotate(45deg);
	}

	.menu-toggle.active .bar:nth-child(2) {
		transform: translateY(-3.5px) rotate(-45deg);
	}

	.full-menu {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		background: var(--bg-primary);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		visibility: hidden;
		transition: all 0.5s;
		z-index: 1000;
	}

	.full-menu.active {
		opacity: 1;
		visibility: visible;
	}

	.nav-links {
		list-style: none;
		padding: 0;
		text-align: center;
	}

	.nav-links li {
		margin: 2rem 0;
		overflow: hidden;
	}

	.nav-links a {
		text-decoration: none;
		color: #ffffff;
		font-size: 3rem;
		font-weight: 700;
		letter-spacing: 0.2em;
		display: block;
		transition: all 0.5s;
		position: relative;
	}

	.nav-links a::after {
		content: attr(data-desc);
		position: absolute;
		bottom: -1rem;
		left: 50%;
		transform: translateX(-50%);
		font-size: 0.8rem;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		opacity: 0;
		transition: all 0.5s;
		color: var(--accent-primary);
	}

	.nav-links a:hover {
		color: var(--accent-primary);
		transform: translateY(-10px);
	}

	.nav-links a:hover::after {
		opacity: 1;
		bottom: -1.5rem;
	}

	body.menu-open {
		overflow: hidden;
	}

	.global-footer {
		padding: 4rem 2rem;
		text-align: center;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		color: var(--text-muted);
		font-size: 0.8rem;
		letter-spacing: 0.1rem;
	}

	.fade-in-up {
		animation: fadeInUp 1.2s ease-out forwards;
		opacity: 0;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
